<?xml version="1.0" encoding="utf-8"?>
<com.huagu.RX.rongxinmedical.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_5"
            app:layout_widthPercent="25%w">

            <com.huagu.RX.rongxinmedical.widget.CircleImageView
                android:id="@+id/message_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_widthPercent="80%w"
                app:layout_heightPercent="80%w"/>

        </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

        <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/message_content"
                android:background="@drawable/message_bg"
                app:layout_paddingLeftPercent="6%w"
                android:padding="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

    </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

    <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_2"
        android:gravity="center">

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:background="@drawable/message_gray_bg"
            android:padding="3dp"
            android:textColor="@color/colorWhite"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

    </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

</com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>
