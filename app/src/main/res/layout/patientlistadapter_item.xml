<?xml version="1.0" encoding="utf-8"?>
<com.huagu.RX.rongxinmedical.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_heightPercent="30%w"
            >

    <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_paddingTopPercent="3%w"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingLeftPercent="2%w"
        app:layout_paddingRightPercent="2%w">

        <com.huagu.RX.rongxinmedical.widget.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="20%w"
            app:layout_heightPercent="20%w"
            android:layout_marginLeft="@dimen/dimen_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo"
            />

        <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/gray_black"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/textsize_16"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/age_and_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black_gray"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/textsize_16"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/patient_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black_gray"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/textsize_16"
                android:layout_weight="1"/>

        </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

        <com.huagu.RX.rongxinmedical.widget.PercentLinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding"
            android:orientation="vertical"
            app:layout_widthPercent="25%w"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_marginBottom="@dimen/dimen_5"
                android:src="@mipmap/message"/>

            <com.huagu.RX.rongxinmedical.widget.CustomTextView
                android:id="@+id/message_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:text="2016-08-01"
                android:minWidth="@dimen/dimen_30"
                android:textSize="@dimen/textsize_14"/>


        </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>

    </com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>
</com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>
