<?xml version="1.0" encoding="utf-8"?>
<com.huagu.RX.rongxinmedical.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="horizontal"
              android:paddingLeft="@dimen/dimen_20"
              android:paddingRight="@dimen/dimen_20"
              android:paddingBottom="@dimen/dimen_5"
              android:paddingTop="@dimen/dimen_5"
              android:background="@color/colorWhite"
              android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/sleep_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@mipmap/no1"/>

    <ImageView
        android:id="@+id/sleep_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%w"
        app:layout_heightPercent="20%w"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@mipmap/logo"/>

    <TextView
        android:id="@+id/sleep_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_weight="1"
        android:textSize="@dimen/textsize_18"/>

    <TextView
        android:id="@+id/sleep_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10"
        android:textColor="@color/ThemeColor"
        android:text="1112"
        android:textSize="@dimen/textsize_18"
        />

</com.huagu.RX.rongxinmedical.widget.PercentLinearLayout>
